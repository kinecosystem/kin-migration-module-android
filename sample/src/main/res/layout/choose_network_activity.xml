<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_padding"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="kin.sdk.migration.sample.ChooseNetworkActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <Button
        android:id="@+id/btn_core_test_net"
        style="@style/KinButtonStyle.TestNet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/core_test_net"
        />

    <Button
        android:id="@+id/btn_sdk_test_net"
        style="@style/KinButtonStyle.TestNet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/button_margin"
        android:text="@string/sdk_test_net"
        />

    <Button
        android:id="@+id/btn_core_main_net"
        style="@style/KinButtonStyle.MainNet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/button_margin"
        android:text="@string/core_main_net"/>

    <Button
        android:id="@+id/btn_sdk_main_net"
        style="@style/KinButtonStyle.MainNet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/button_margin"
        android:text="@string/sdk_main_net"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/button_margin"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/kin_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/kin_small_icon"/>

        <TextView
            android:id="@+id/kin_foundation_url"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:lines="1"
            android:textColor="@drawable/text_color"
            android:textSize="@dimen/font_small"/>

    </LinearLayout>


</LinearLayout>
